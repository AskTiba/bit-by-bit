{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": ["./src/*"],
      "~/ecommerce-product-page/*": [
        "./src/app/challenges/ecommerce-product-page/*"
      ],
      "~/expense-tracker/*": ["./src/app/challenges/expense-tracker/*"],
      "~/multi-step-form/*": ["./src/app/challenges/multi-step-form/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src",
    "scripts"
  ],
  "exclude": ["node_modules"]
}
